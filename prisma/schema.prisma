generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  email     String   @unique
  name      String?
  role      String?
  createdAt DateTime @default(now())
  tasks     Task[]
  sessions  Session[]
}


model Task {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  detail    String?
  status    String   @default("pending") // pending/completed
  createdAt DateTime @default(now())
  dueDate   DateTime?
}

model Session {
  id         String   @id @default(uuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  startAt    DateTime
  endAt      DateTime?
  productive Boolean  @default(true)
  createdAt  DateTime @default(now())
}